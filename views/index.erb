<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h2>Последние посты:</h2>
	<br />
	<% @results.each do |post| %>
		<p>
			<%= post['content'] %>
			<br />
			<br />
			<span style="font-size: 75%; color: #999">Added at <%= post['created_date'] %> by <b><%= post['author'] %></b></span>
			<br />
			<a href="/post/<%= post['id'] %>">комментарии</a>
		</p>
		<hr />
	<% end %>

</body>
</html>